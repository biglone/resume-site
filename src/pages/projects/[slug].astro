---
export const prerender = false;

import { marked } from 'marked';
import type { Project, SiteConfig } from '../../types/resume';
import Layout from '../../layouts/Layout.astro';
import Badge from '../../components/common/Badge.astro';
import ImageGallery from '../../components/projects/ImageGallery';
import CommitHistory from '../../components/projects/CommitHistory.astro';
import { fetchPublishedResume } from '../../lib/api';
import { normalizeResume } from '../../lib/normalizeResume';

const assetBaseUrl = import.meta.env.BASE_URL;
const baseUrl = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;

const fallbackSite: SiteConfig = {
  title: 'Resume',
  description: 'Resume not published yet.',
  theme: 'auto',
  language: 'en'
};

let project: Project | null = null;
let site: SiteConfig = fallbackSite;
let errorMessage: string | null = null;

try {
  const data = await fetchPublishedResume();
  if (!data) {
    errorMessage = 'Resume not published.';
    Astro.response.status = 404;
  } else {
    const resume = normalizeResume(data.resume, assetBaseUrl);
    site = resume.site;
    project = resume.projects.find((item) => item.slug === Astro.params.slug) || null;
    if (!project) {
      errorMessage = 'Project not found.';
      Astro.response.status = 404;
    }
  }
} catch (error) {
  errorMessage = error instanceof Error ? error.message : 'Unable to load project.';
  Astro.response.status = 500;
}

const detailHtml = project?.detail ? marked(project.detail) : '';
---

<Layout
  title={project ? `${project.name} - ${site.title}` : site.title}
  description={project?.description || site.description}
  language={site.language}
>
  {!project && (
    <section class="py-16">
      <div class="section-container">
        <div class="card text-center">
          <h1 class="text-2xl font-bold mb-2">项目不可用</h1>
          <p style="color: var(--color-text-secondary);">{errorMessage}</p>
          <a
            href={baseUrl}
            class="inline-flex items-center gap-2 text-sm mt-6 link"
          >
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            返回首页
          </a>
        </div>
      </div>
    </section>
  )}

  {project && (
    <article class="py-12">
      <div class="section-container">
        <!-- Back Link -->
        <a
          href={`${baseUrl}#projects`}
          class="inline-flex items-center gap-2 text-sm mb-8 link"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          返回首页
        </a>

        <!-- Header -->
        <header class="mb-8">
          <p class="section-kicker mb-3">PROJECT</p>
          <h1 class="text-3xl sm:text-4xl font-semibold mb-4">{project.name}</h1>

          <div class="flex flex-wrap items-center gap-4 text-sm" style="color: var(--color-text-secondary);">
            {project.role && (
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                {project.role}
              </span>
            )}
            {project.period && (
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                {project.period}
              </span>
            )}
            {project.link && (
              <a
                href={project.link}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-1 link"
              >
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
                查看源码
              </a>
            )}
          </div>
        </header>

        <!-- Image Gallery -->
        {project.images && project.images.length > 0 && (
          <section class="mb-12">
            <ImageGallery images={project.images} client:load />
          </section>
        )}

        <!-- Description -->
        <p class="text-lg mb-8" style="color: var(--color-text-secondary);">
          {project.description}
        </p>

        <!-- Highlights -->
        {project.highlights && project.highlights.length > 0 && (
          <section class="mb-8">
            <h2 class="text-xl font-semibold mb-4">项目亮点</h2>
            <ul class="grid gap-3 sm:grid-cols-2">
              {project.highlights.map((highlight) => (
                <li class="flex items-start gap-2">
                  <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--color-accent);">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>{highlight}</span>
                </li>
              ))}
            </ul>
          </section>
        )}

        <!-- Tech Stack -->
        <section class="mb-8">
          <h2 class="text-xl font-semibold mb-4">技术栈</h2>
          <div class="flex flex-wrap gap-2">
            {project.tags.map((tag) => (
              <Badge text={tag} />
            ))}
          </div>
        </section>

        <!-- Detail Content (Markdown) -->
        {detailHtml && (
          <section class="mb-12">
            <div class="prose prose-lg dark:prose-invert max-w-none" set:html={detailHtml} />
          </section>
        )}

        <!-- Git Commits -->
        {project.commits && project.commits.length > 0 && (
          <section class="mb-12">
            <h2 class="text-xl font-semibold mb-4">代码提交规范</h2>
            <CommitHistory commits={project.commits} />
          </section>
        )}

        <!-- Footer Link -->
        {project.link && (
          <div class="pt-8 border-t" style="border-color: var(--color-border);">
            <a
              href={project.link}
              target="_blank"
              rel="noopener noreferrer"
              class="btn-primary"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              在 GitHub 上查看
            </a>
          </div>
        )}
      </div>
    </article>
  )}
</Layout>

<style is:global>
  /* Prose styles for markdown content */
  .prose {
    color: var(--color-text);
    font-family: var(--font-body);
  }

  .prose h2 {
    color: var(--color-text);
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-border);
    font-family: var(--font-display);
  }

  .prose h3 {
    color: var(--color-text);
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-family: var(--font-display);
  }

  .prose p {
    margin-bottom: 1rem;
    line-height: 1.75;
  }

  .prose ul,
  .prose ol {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }

  .prose strong {
    color: var(--color-text);
    font-weight: 600;
  }

  .prose code {
    background-color: var(--color-bg-secondary);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }

  .prose pre {
    background-color: #14181d;
    color: #e2e8f0;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1rem;
  }

  .prose pre code {
    background: none;
    padding: 0;
    font-size: 0.875rem;
  }

  .prose a {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .prose a:hover {
    color: var(--color-primary-hover);
  }
</style>
