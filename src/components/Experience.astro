---
import type { Experience as ExperienceType } from '../types/resume';
import Badge from './common/Badge.astro';

interface Props {
  experience: ExperienceType[];
}

const { experience } = Astro.props;
---

<section id="experience" class="py-16">
  <div class="section-container">
    <h2 class="section-title">工作经历</h2>

    <div class="relative">
      <!-- Timeline line -->
      <div class="absolute left-0 sm:left-4 top-0 bottom-0 w-0.5 timeline-line"></div>

      <!-- Experience items -->
      <div class="space-y-8">
        {experience.map((exp, index) => (
          <div
            class="relative pl-8 sm:pl-16 animate-fade-in-up"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <!-- Timeline dot -->
            <div class="absolute left-0 sm:left-4 w-3.5 h-3.5 -translate-x-1/2 rounded-full timeline-dot"></div>

            <div class="card">
              <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2 mb-4">
                <div>
                  <h3 class="text-lg font-semibold">{exp.position}</h3>
                  <p class="text-base" style="color: var(--color-primary);">
                    {exp.company}
                  </p>
                </div>
                <div class="text-sm" style="color: var(--color-text-secondary);">
                  <p>{exp.period}</p>
                  {exp.location && <p>{exp.location}</p>}
                </div>
              </div>

              <ul class="list-disc list-inside space-y-2 mb-4 text-sm" style="color: var(--color-text-secondary);">
                {exp.description.map((item) => (
                  <li>{item}</li>
                ))}
              </ul>

              <div class="flex flex-wrap gap-2">
                {exp.tags.map((tag) => (
                  <Badge text={tag} />
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
