---
import type { Profile } from '../types/resume';
import SocialLinks from './common/SocialLinks.astro';

interface Props {
  profile: Profile;
}

const { profile } = Astro.props;
---

<section id="about" class="py-16 sm:py-24">
  <div class="section-container">
    <div class="grid gap-10 lg:grid-cols-[1.1fr,0.9fr] items-start">
      <div class="space-y-6 animate-fade-in-up">
        <p class="section-kicker">PROFILE</p>
        <h1 class="hero-title">{profile.name}</h1>
        <p class="hero-role">{profile.title}</p>
        <p class="hero-bio max-w-2xl">{profile.bio}</p>

        <div class="flex flex-wrap items-center gap-3">
          {profile.email && (
            <a href={`mailto:${profile.email}`} class="btn-primary">
              联系我
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </a>
          )}
          <a href="#projects" class="btn-secondary">
            查看项目
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>
      </div>

      <div class="hero-card animate-fade-in-up" style="animation-delay: 0.1s">
        <div class="flex items-center gap-5">
          <div class="hero-avatar w-24 h-24 sm:w-28 sm:h-28">
            <img
              src={profile.avatar}
              alt={profile.name}
              class="w-full h-full object-cover"
              onerror="this.src='https://ui-avatars.com/api/?name=' + encodeURIComponent(this.alt) + '&size=160&background=1d4ed8&color=fff'"
            />
          </div>
          <div>
            <p class="section-kicker">CURRENT FOCUS</p>
            <p class="text-base font-semibold">{profile.title}</p>
          </div>
        </div>

        <div class="space-y-3">
          {profile.location && (
            <div class="meta-row">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span>{profile.location}</span>
            </div>
          )}
          {profile.email && (
            <a href={`mailto:${profile.email}`} class="meta-row link">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span>{profile.email}</span>
            </a>
          )}
        </div>

        <div class="pt-4 border-t" style="border-color: var(--color-border);">
          <SocialLinks social={profile.social} />
        </div>
      </div>
    </div>
  </div>
</section>
