---
import type { SkillCategory } from '../types/resume';

interface Props {
  skills: SkillCategory[];
}

const { skills } = Astro.props;
---

<section id="skills" class="py-16">
  <div class="section-container">
    <h2 class="section-title">技术栈</h2>

    <div class="grid gap-6 md:grid-cols-2">
      {skills.map((category, categoryIndex) => (
        <div
          class="card animate-fade-in-up"
          style={`animation-delay: ${categoryIndex * 0.1}s`}
        >
          <h3 class="text-lg font-semibold mb-4">{category.category}</h3>

          <div class="space-y-4">
            {category.items.map((skill, skillIndex) => (
              <div>
                <div class="flex items-center justify-between mb-1">
                  <span class="text-sm font-medium">{skill.name}</span>
                  <span class="text-xs" style="color: var(--color-text-secondary);">
                    {skill.level}%
                  </span>
                </div>
                <div class="progress-track">
                  <div
                    class="progress-bar"
                    style={`width: ${skill.level}%; animation-delay: ${(categoryIndex * 0.1) + (skillIndex * 0.05)}s`}
                  ></div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
