PORT=4000
JWT_SECRET=replace-with-secure-secret
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
# ADMIN_PASSWORD_HASH=
# Allow registration when users already exist (default false)
ALLOW_REGISTRATION=false
# Optional data directory (defaults to server/data)
# DATA_DIR=/absolute/path/to/data
# Comma-separated list of allowed origins (leave empty to allow all)
CORS_ORIGIN=http://localhost:4321,http://localhost:5173,http://127.0.0.1:4321,http://127.0.0.1:5173
# Optional seed resume path
# SEED_RESUME_PATH=/absolute/path/to/resume.yaml
# Set to false to avoid publishing on first init
SEED_PUBLISH_ON_INIT=true
